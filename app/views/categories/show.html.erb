<section>
  <div class="sticky-top">
    <nav class="nav-header px-1 pb-2 pt-4">
      <div class="m-auto row align-items-end mt-1">
        <%= link_to user_categories_path, class:"text-white btn-back col" do %>
          <i class="bi bi-arrow-left"></i>
        <% end %>
        <h1 class="text-uppercase text-center fs-5 col-7 ">Expenses</h1>
        <i class="bi bi-search fs-5 mb-1 pb-1 col text-end"></i>
      </div>
    </nav>
      
    <div class="d-flex justify-content-between align-items-center mb-3 px-3 py-2 bg-white border-bottom border-2 border-light-subtle">
        <h2 class="fs-5 pt-2">
          <%= image_tag @category.icon, alt: "category_icon", style: "width: 1.65rem;" %>
          <%= @category.name %> Budget
        </h2>
        <span class="category-amount fw-bold"><%= number_to_currency(@expenses.sum(&:amount)) %></span>
    </div>
  </div>

  <article class="expenses-container d-flex flex-column justify-content-between px-3">
    <% if @expenses.count > 0 %>
      <%= render "shared/expense" %>
    <% else %>
      <p class="d-flex justify-content-center align-items-center p-3" >You have no expenses added to this category yet. Please click on 'Add New Expense' to proceed!</p>
    <% end %>
  </article>

  <div class='add-expense-btn text-center'>
    <%= link_to "Add New Expense", new_user_category_expense_path(current_user, @category), class: 'new-expense-btn border border-light-subtle text-light text-uppercase' %>
  </div>
</section>
