<section class="password_form">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post}) do |f| %>
    <nav class="nav-header w-100 p-3 d-flex justify-content-between align-items-end">
      <%= link_to user_session_path, class: "text-white btn-back col" do %>
        <i class="bi bi-arrow-left"></i>
      <% end %>
      <h1 class="text-uppercase text-center fs-5 col-7 ">Forgot password?</h1>
      <%= f.submit "Next", class: "btn bg-transparent border-0 p-0 m-0 mb-1 pb-1 col text-end" %>
    </nav>

    <%= render "devise/shared/error_messages", resource: resource %>

    <article class="form_container">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form_input border-0", placeholder: "Email" %>
    </article>

    <article class="d-flex align-items-center flex-column opacity-75">
      <%= render "devise/shared/links" %>
    </article>
  <% end %>
</section>
