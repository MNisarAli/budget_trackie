<section class="login_form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <nav class="nav-header w-100 p-3 d-flex justify-content-between align-items-end">
      <%= link_to users_path, class:"text-white btn-back col" do %>
        <i class="bi bi-arrow-left"></i>
      <% end %>
      <h1 class="text-uppercase text-center fs-5 col-7 ">Log in</h1>
      <%= f.submit "Log in", class: "btn bg-transparent border-0 p-0 m-0 mb-1 pb-1 col text-end" %>
    </nav>

    <article class="form_container">
      <div class="form_group">
        <%= f.email_field :email, class: "form_input", autofocus: true, autocomplete: "email", placeholder: "Email" %>
      </div>

      <div class="form_group">
        <%= f.password_field :password, class: "form_input", autocomplete: "current-password", placeholder: "Password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field opacity-75 p-1">
          <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
        </div>
      <% end %>
    </article>

    <article class="d-flex align-items-center flex-column opacity-75">
      <%= render "devise/shared/links" %>
    </article>
  <% end %>
</section>
