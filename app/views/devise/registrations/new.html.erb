<section class="signup_form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <nav class="nav-header w-100 p-3 d-flex justify-content-between align-items-end">
      <%= link_to users_path, class:"text-white btn-back col" do %>
        <i class="bi bi-arrow-left"></i>
      <% end %>
      <h1 class="text-uppercase text-center fs-5 col-7 ">Sign up</h1>
      <%= f.submit "Next", class: "btn bg-transparent border-0 p-0 m-0 mb-1 pb-1 col text-end" %>
    </nav>

    <article class="form_container">
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form_group">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form_input', placeholder: "Name" %>
      </div>

      <div class="form_group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form_input", placeholder: "Email" %>
      </div>

      <div class="form_group">
        <%= f.password_field :password, autocomplete: "new-password", class: "form_input", placeholder: "Password" %>
      </div>

      <div class="form_group">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form_input border-0", placeholder: "Confirm Password" %>
      </div>
    </article>

    <article class="d-flex align-items-center flex-column opacity-75">
      <%= render "devise/shared/links" %>
    </article>
  <% end %>
</section>
